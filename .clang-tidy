---
Checks: >
  bugprone-*,
  cert-*,
  cppcoreguidelines-*,
  modernize-*,
  performance-*,
  portability-*,
  readability-*,
  -modernize-use-trailing-return-type,
  -readability-function-size,
  -readability-convert-member-functions-to-static,
  -cppcoreguidelines-macro-usage,
  -cert-dcl58-cpp,
  -clang-diagnostic-error
HeaderFilterRegex: '^(src|test|schemas)/.*'
WarningsAsErrors: >
  cppcoreguidelines-owning-memory,
  cppcoreguidelines-no-malloc,
  cppcoreguidelines-avoid-c-arrays,
  modernize-avoid-c-arrays,
  hicpp-avoid-c-arrays,
  cppcoreguidelines-pro-type-reinterpret-cast,
  cppcoreguidelines-pro-type-const-cast,
  cppcoreguidelines-pro-type-cstyle-cast,
  cppcoreguidelines-pro-bounds-pointer-arithmetic,
  cppcoreguidelines-pro-bounds-array-to-pointer-decay,
  cppcoreguidelines-pro-bounds-constant-array-index,
  cppcoreguidelines-avoid-owning-raw-pointers
CheckOptions:
  - key: readability-identifier-naming.ClassCase
    value: CamelCase
  - key: readability-identifier-naming.ConstexprVariableCase
    value: UPPER_CASE
  - key: readability-identifier-naming.EnumConstantCase
    value: UPPER_CASE
  - key: readability-identifier-naming.FunctionCase
    value: camelBack
  - key: readability-identifier-naming.FieldCase
    value: camelBack
  - key: readability-identifier-naming.FieldPrefix
    value: m_
  - key: readability-identifier-naming.StaticMemberCase
    value: camelBack
  - key: readability-identifier-naming.StaticMemberPrefix
    value: m_
  - key: readability-identifier-naming.PrivateStaticMemberCase
    value: camelBack
  - key: readability-identifier-naming.PrivateStaticMemberPrefix
    value: m_
